@model app.Areas.admin.ViewModels.OpremaZaduziVM
@{
    ViewBag.Title = "Zaduzi";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<br />




    <h2>Zaduzi uređaj</h2>




@using (Html.BeginForm("Zaduzi", "Oprema"))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.OpremaId)

    <hr /> <br />

    <div class="row">
       

      
            <div class="col-3">

                <h3>@Html.Raw(Model.device.Naziv)</h3> <br />
                Serijski broj: <b>@Html.Raw(Model.device.SerijskiBroj) </b><br />

            </div>
            <div class="col-4">

                <div class="form-group">
                    @Html.LabelFor(m => @Model.ListaKorisnika, "Korisnik:  ")
                    @Html.DropDownListFor(x => x.KorisnikId, Model.ListaKorisnika.Select(x => new SelectListItem
           {
               Value = x.Id.ToString(),
               Text = x.Ime + " " + x.Prezime
           }).ToList(), "Izaberite korisnika...", new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => Model.KorisnikId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    @Html.LabelFor(m => @Model.DatumZaduzenja, "Datum zaduženja: ")
                    @Html.EditorFor(model => model.DatumZaduzenja, new { htmlAttributes = new { @class = "form-control" } })


                    @Html.ValidationMessageFor(model => Model.DatumZaduzenja, "", new { @class = "text-danger" })
                </div>

            </div>

    </div>


    <hr />

    <a href="@Request.UrlReferrer" class="btn btn-secondary  hvr-icon-back " title="Nazad">
        <i class="fas fa-chevron-circle-left "></i>
        Nazad
    </a>
    <button type="submit" value="Save" class="btn btn-primary" aria-label="Left Align">
        <span class="fas fa-save fff-icon" aria-hidden="true"></span> SPREMI
    </button>

}