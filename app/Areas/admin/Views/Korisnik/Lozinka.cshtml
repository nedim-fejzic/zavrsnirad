@model app.Areas.admin.ViewModels.KorisnikLozinkaVM
@{
    ViewBag.Title = "Lozinka";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<br />

@using (Html.BeginForm())
{



    <div class="form-group">
        @Html.LabelFor(m => @Model.ListaKorisnika, "Korisnik:  ")
        @Html.DropDownListFor(x => x.KorisnikId, Model.ListaKorisnika.Select(x => new SelectListItem
   {
       Value = x.Id.ToString(),
       Text = x.Ime + " " + x.Prezime
   }).ToList(), "Izaberite korisnika...", new { @class = "form-control" })


        @Html.ValidationMessageFor(model => Model.KorisnikId, "", new { @class = "text-danger" })
    </div>




    <div class="form-group">
        @Html.LabelFor(m => @Model.Lozinka, "Lozinka: ")
        @Html.TextBoxFor(m => @Model.Lozinka, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => Model.Lozinka, "", new { @class = "text-danger" })
    </div>





    <hr />

     

        <a href="@Request.UrlReferrer" class="btn btn-secondary  hvr-icon-back " title="Nazad">
            <i class="fas fa-chevron-circle-left "></i>
            Nazad
        </a>

        <button type="submit" value="Save" class="btn btn-primary">
            <i class="fas fa-save"></i>    
    Spremi</button>
}



