<ul class="nav nav-tabs nav-justified" role="tablist">
   

    @foreach (var kategorija in Model.ListaKategorija)
    {
        if (Model.ListaKategorija.First() == kategorija)
        {
            <li class="nav-item">
                <a class="nav-link active" href="#@Html.Raw(kategorija.Id)" role="tab" data-toggle="tab">@Html.Raw(kategorija.Naziv)</a>
            </li>
        }
        else
        {

            <li class="nav-item">
                <a class="nav-link" href="#@Html.Raw(kategorija.Id)" role="tab" data-toggle="tab">@Html.Raw(kategorija.Naziv)</a>
            </li>
        }
    }
</ul>




<div class="tab-content">
    @foreach (var kategorija in Model.ListaKategorija)
    {
        if (Model.ListaKategorija.First()==kategorija)
        {
            <div role="tabpanel" class="tab-pane  active"  id="@Html.Raw(kategorija.Id)">

                <table class="table">
                    <thead>
                        <tr>
                            <th>Naziv</th>
                            <th>Pitanje</th>
                            <th>Odgovor</th>
                            <th>Vidljiv</th>
                            <th>Akcija</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (FaqRed x in Model.FaqRedovi)
                    {
                        if (kategorija.Id == x.KategorijaId)
                        {
                                <tr>
                                    <td>@x.NazivKategorije</td>
                                    <td>@x.Pitanje</td>
                                    <td>@x.Odgovor</td>
                                    <td>@x.Vidljiv</td>


                                    <td>
                                        @Html.ActionLink("Uredi", "Edit", new { id = x.Id }, new { @class = "btn btn-secondary btn-sm" })
                                        @Html.ActionLink("Detalji", "Details", new { id = x.Id }, new { @class = "btn btn-secondary btn-sm" })
                                    </td>

                                </tr>
                            }
                        }


                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div role="tabpanel" class="tab-pane" id="@Html.Raw(kategorija.Id)">

                <table class="table">
                    <thead>
                        <tr>
                            <th>Naziv</th>
                            <th>Pitanje</th>
                            <th>Odgovor</th>
                            <th>Vidljiv</th>
                            <th>Akcija</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (FaqRed x in Model.FaqRedovi)
                    {
                        if (kategorija.Id == x.KategorijaId)
                        {
                                <tr>
                                    <td>@x.NazivKategorije</td>
                                    <td>@x.Pitanje</td>
                                    <td>@x.Odgovor</td>
                                    <td>@x.Vidljiv</td>


                                    <td>
                                        @Html.ActionLink("Uredi", "Edit", new { id = x.Id }, new { @class = "btn btn-secondary btn-sm" })
                                        @Html.ActionLink("Detalji", "Details", new { id = x.Id }, new { @class = "btn btn-secondary btn-sm" })
                                    </td>

                                </tr>
                            }
                        }


                    </tbody>
                </table>
            </div>
        }
    }


   

</div>







