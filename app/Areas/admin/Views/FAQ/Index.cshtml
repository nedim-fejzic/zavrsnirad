@using app.Areas.admin.ViewModels
@model app.Areas.admin.ViewModels.FaqIndexVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>FAQ</h2>



