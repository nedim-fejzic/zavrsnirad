@model app.Areas.admin.ViewModels.AktivneUslugeNovaAktivacijaVM
@{
    ViewBag.Title = "Nova Aktiviraj";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}
<br />

<h3>Aktiviraj novu uslugu</h3>

<div class="row">
   

    <hr />


    <div class="col-12">

        @using (Html.BeginForm("NovaAktivacija", "AktivneUsluge"))
        {




            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-12">
                @Html.LabelFor(m => @Model.ListaKorisnika, "Lista korisnika:  ")
                @Html.DropDownListFor(x => x.KorisnikId, Model.ListaKorisnika.Select(x => new SelectListItem
           {
               Value = x.Id.ToString(),
               Text = x.Ime + " " + x.Prezime
           }).ToList(), "Izaberite korisnika...", new { @class = "form-control" })

                @Html.ValidationMessageFor(model => Model.KorisnikId, "", new { @class = "text-danger" })
            </div>


            <div class="col-12">
                @Html.LabelFor(m => @Model.ListaPaketa, "Lista usluga:  ")
                @Html.DropDownListFor(x => x.PaketId, Model.ListaPaketa.Select(x => new SelectListItem
           {
               Value = x.Id.ToString(),
               Text = x.TipUsluga.Naziv + " - " + x.Naziv
           }).ToList(), "Izaberite uslugu...", new { @class = "form-control" })

                @Html.ValidationMessageFor(model => Model.PaketId, "", new { @class = "text-danger" })
            </div>



            <div class="col-12 ">
                @Html.LabelFor(m => @Model.AdresaInstalacije, "Adresa instalacije: ", new { @class = "form-naslov" })
                @Html.EditorFor(model => model.AdresaInstalacije, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdresaInstalacije, "", new { @class = "text-danger" })
            </div>

                <div class="col-12 ">
                    @Html.LabelFor(m => @Model.DatumInstalacije, "Datum instalacije: ", new { @class = "form-naslov" })
                    @Html.EditorFor(model => model.DatumInstalacije, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DatumInstalacije, "", new { @class = "text-danger" })
                </div>

                <br /><br />

              

                <button type="submit" value="Save" class="btn btn-primary">Spremi</button>


                <br /><br />



        }
    </div>



</div>

