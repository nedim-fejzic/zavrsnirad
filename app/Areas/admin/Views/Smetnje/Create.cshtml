@model app.Areas.admin.ViewModels.SmetnjeDodajVM

@{
    ViewBag.Title = "Dodaj";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="naslov">Dodaj smetnju</div>
<hr />

@using (Html.BeginForm("Create", "Smetnje"))
{

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group">
            @Html.LabelFor(m => @Model.ListaAktivnihUsluga, "Usluga:  ")
            @Html.DropDownListFor(x => x.AktivnaUslugaId, Model.ListaAktivnihUsluga.Select(x => new SelectListItem
       {
           Value = x.Id.ToString(),
           Text = x.Paket.Naziv
       }).ToList(), "Izaberite uslugu", new { @class = "form-control" })

            @Html.ValidationMessageFor(model => Model.AktivnaUslugaId, "", new { @class = "text-danger" })
        </div>


  
        <div class="form-group">
            @Html.LabelFor(m => @Model.DatumUocavanja, "Datum: ")
            @Html.EditorFor(model => model.DatumUocavanja, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => Model.DatumUocavanja, "", new { @class = "text-danger" })
        </div>


      


        <div class="form-group">
            @Html.LabelFor(m => @Model.Opis, "Opis problema: ")
            @Html.TextAreaFor(model => model.Opis, new { @class = "form-control" , rows = "10" })
            @Html.ValidationMessageFor(model => Model.Opis, "", new { @class = "text-danger" })
        </div>



        <br />
        <br />

        @Html.ActionLink("Nazad", "Index", null, null, new { @class = "btn btn-secondary " })
        <button type="submit" value="Save" class="btn btn-primary">Spremi</button>



        <br />
        <br /><br /><br />

    </div>

}

