@{
    ViewBag.Code = TempData["code"];
    ViewBag.Message = TempData["message"];
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ADMIN PANEL - OPERATOR 1</title>


    <link href="~/Content/bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/admin4b.min.css" rel="stylesheet" />
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>



</head>
<body>


    <div class="app">
        <div class="app-body">
            <div class="app-sidebar sidebar-dark sidebar-slide-left">
                <div class="text-right">
                    <button type="button" class="btn btn-sidebar" data-dismiss="sidebar">
                        <span class="x"></span>
                    </button>
                </div>
                <div class="sidebar-header">
                    @if (Session["urlslike"] != null)
                    {

                        <img class="user-photo" src="@Url.Content(Session["urlslike"].ToString())"  />



                    }
                    else
                    {
                        <img class="user-photo" src="~/Slike/user-photo.png" />
                    }
                    @if (Session["imeprezime"] != null)
                    {
                        <p class="username">@(Session["imeprezime"])</p>
                    }
                </div>

                <div id="sidebar-nav" class="sidebar-nav" data-children=".sidebar-nav-group">

                    @* role ---- admin support sales manager *@

                    <a href="@Url.Action("Index", "Home", new { area = "" })" class="sidebar-nav-link">
                        <i class="fas fa-user-circle"></i> Korisnički dio
                    </a>

                  

                        @if (Session["role"].ToString() == "admin" || Session["role"].ToString() == "manager")
                        {
                            <a href="@Url.Action("Index", "Vijesti", new { area = "admin" })" class="sidebar-nav-link">
                                <i class="fa fa-play"></i> Vijesti
                            </a>
                        }


                        @if (Session["role"].ToString() == "admin" || Session["role"].ToString() == "manager")
                        {



                            <a href="@Url.Action("Search", "FAQ", new { area = "admin" })" class="sidebar-nav-link">
                                <i class="fas fa-question-circle"></i> FAQ
                            </a>


                        }

                        @if (Session["role"].ToString() == "admin" || Session["role"].ToString() == "manager")
                        {
                            <a href="@Url.Action("Index", "AktivneUsluge", new { area = "admin" })" class="sidebar-nav-link">
                                <i class="fas fa-chart-area"></i> Aktivne usluge
                            </a>
                        }




                        @if (Session["role"].ToString() == "admin" || Session["role"].ToString() == "manager")
                        {

                            <div class="sidebar-nav-group">
                                <a href="#paketi" class="sidebar-nav-link collapsed" data-toggle="collapse" data-parent="#sidebar-nav">
                                    <i class="far fa-newspaper"></i> Paketi
                                </a>

                                <div id="paketi" class="sidebar-nav-group collapse">
                                    <a href="@Url.Action("Index", "Pakets", new { area = "admin" })" class="sidebar-nav-link">Index paketa</a>
                                    <a href="@Url.Action("Create", "Pakets", new { area = "admin" })" class="sidebar-nav-link">Dodaj paket</a>
                                </div>
                            </div>

                        }

                        @if (Session["role"].ToString() == "admin" || Session["role"].ToString() == "manager")
                        {
                            <a href="@Url.Action("Index", "Oprema", new { area = "admin" })" class="sidebar-nav-link">
                                <i class="fas fa-desktop"></i> Oprema
                            </a>
                        }

                        @*  /////////////////////////////////      prodaja         //////////////////////////////////////////    *@


                        @if (Session["role"].ToString() == "admin" || Session["role"].ToString() == "sales")
                        {
                            <a href="@Url.Action("Index", "Korisnik", new { area = "admin" })" class="sidebar-nav-link">
                                <i class="fas fa-users"></i> Korisnici
                            </a>
                        }


                        @if (Session["role"].ToString() == "admin" || Session["role"].ToString() == "sales")
                        {
                            <div class="sidebar-nav-group">
                                <a href="#zahtjevi" class="sidebar-nav-link collapsed" data-toggle="collapse" data-parent="#sidebar-nav">
                                    <i class="far fa-address-book"></i> Zahtjevi
                                </a>

                                <div id="zahtjevi" class="sidebar-nav-group collapse">
                                    <a href="@Url.Action("Index", "Zahtjevi", new { area = "admin" })" class="sidebar-nav-link">Zahtjevi - novi korisnik</a>
                                    <a href="@Url.Action("IndexPromjena", "Zahtjevi", new { area = "admin" })" class="sidebar-nav-link">Zahtjevi - postojeći korisnici</a>
                                </div>
                            </div>
                        }



                        @if (Session["role"].ToString() == "admin" || Session["role"].ToString() == "sales")
                        {
                            <div class="sidebar-nav-group">
                                <a href="#racuni" class="sidebar-nav-link collapsed" data-toggle="collapse" data-parent="#sidebar-nav">
                                    <i class="far fa-newspaper"></i> Racuni
                                </a>

                                <div id="racuni" class="sidebar-nav-group collapse">
                                    <a href="@Url.Action("Kreiraj", "Racun", new { area = "admin" })" class="sidebar-nav-link">Kreiraj racune</a>
                                    <a href="@Url.Action("Index", "Racun", new { area = "admin" })" class="sidebar-nav-link">Pronadji racune</a>
                                </div>
                            </div>
                        }


                        @*  /////////////////////////////////      support         //////////////////////////////////////////    *@



                        @if (Session["role"].ToString() == "admin" || Session["role"].ToString() == "support")
                        {
                            <a href="@Url.Action("Index", "Smetnje", new { area = "admin" })" class="sidebar-nav-link">
                                <i class="fas fa-users"></i> Smetnje
                            </a>
                        }

                        @if (Session["role"].ToString() == "admin" || Session["role"].ToString() == "support")
                        {
                            <a href="@Url.Action("Index", "Uputstva", new { area = "admin" })" class="sidebar-nav-link">
                                <i class="fas fa-book"></i> Uputstva
                            </a>
                        }

                        @if (Session["role"].ToString() == "admin" || Session["role"].ToString() == "support")
                        {
                            <a href="@Url.Action("Search", "Korisnik", new { area = "admin" })" class="sidebar-nav-link">
                                <i class="fas fa-book"></i> Promjena lozinke
                            </a>
                        }
                   




                </div>

                @* \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ *@
                <div class="sidebar-footer">
                  
                    <a href="@Url.Action("Logout", "Start", new { area = "admin" })" data-toggle="tooltip" title="Odjava">
                        <i class="fa fa-power-off"></i>
                    </a>


                </div>
            </div>

            <div class="app-content">
                <nav class="navbar navbar-expand">
                    @* top meni na stranici *@
                    <div class="row">

                        <button type="button" class="btn btn-sidebar" data-toggle="sidebar">
                            <i class="fa fa-bars"></i>
                        </button>

                        <div class="navbar-brand">

                            <a href="@Url.Action("Index", "Start", new { area = "admin" })" class="text-white">
                                <i class="fas fa-users"></i> Admin panel
                            </a>
                        </div>

                        @*<ul class="navbar-nav ml-auto notifikacije-ikona">
                            <li class="nav-item dropdown">

                                <a href="#" class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="badge badge-pill badge-primary">3</span>
                                    <i class="far fa-bell"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a href="#" class="dropdown-item">
                                        <small class="text-secondary">Lorem ipsum (today)</small><br>
                                        <div>Lorem ipsum dolor sit amet...</div>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a href="#" class="dropdown-item">
                                        <small class="text-secondary">Lorem ipsum (yesterday)</small><br>
                                        <div>Lorem ipsum dolor sit amet...</div>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a href="#" class="dropdown-item">
                                        <small class="text-secondary">Lorem ipsum (12/25/2017)</small><br>
                                        <div>Lorem ipsum dolor sit amet...</div>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a href="#" class="dropdown-item text-primary">
                                        See all notifications
                                    </a>
                                </div>
                            </li>
                        </ul>*@


                    </div>
                </nav>



                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>







   

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">


                        @if (ViewBag.Code == "error")
                        {
                            @Html.Raw("<i class=\"fas fa-exclamation-triangle\" aria-hidden=\"true\"></i>  Greška! ");
                        }
                        else if (ViewBag.Code == "info")
                        {
                            @Html.Raw("<i class=\"fas fa-info-circle\" aria-hidden=\"true\"></i> Obavijest");
                        }
                        else
                        {

                            @Html.Raw(ViewBag.Code);
                        }




                    </h4>
                </div>
                <div class="modal-body">

                    @Html.Raw(ViewBag.Message)


                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        Html.Raw(ViewBag.Message);
                    }

                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Zatvori</button>
                </div>
            </div>
        </div>
    </div>







    




    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>

    <script src="~/Scripts/admin4b.min.js"></script>


    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <script>
            $('#myModal').modal();
        </script>
    }
   



</body>
</html>


